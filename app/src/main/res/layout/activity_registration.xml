<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:context="com.example.daniyal.govava.RegistrationActivity"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/imgcover"
        android:src="@drawable/registration_cover"
        android:scaleType="fitStart" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">




                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"

                    android:src="@drawable/registration_profile_image"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/registration_edit_btn"

                    />



            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emma Watson"
                android:id="@+id/RegName"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:fontFamily="bolt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EmmaWatson@gmail.com"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:id="@+id/RegEmail"
                android:textSize="12dp"
                android:fontFamily="bolt"
                />

        </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="250dp"
            android:id="@+id/RelativeLayout1"

            >



                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Full Name"
                    android:paddingLeft="30dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@mipmap/username_icon"
                    android:paddingRight="30dp"
                    android:id="@+id/FullName"
                    android:inputType="text"
                    android:background="@color/colorWhite"
                    />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/envelope_icon"
                    android:layout_below="@id/FullName"
                    android:id="@+id/EmailAddress"
                    android:hint="Email address"
                    android:paddingLeft="30dp"
                    android:drawablePadding="20dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@color/colorWhite"
                    />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@mipmap/password_icon"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_below="@id/EmailAddress"
                    android:id="@+id/Password"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:background="@color/colorWhite"
                    />
                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Confirm Password"
                    android:paddingLeft="30dp"
                    android:drawablePadding="20dp"
                    android:drawableLeft="@mipmap/password_icon"
                    android:paddingRight="30dp"
                    android:layout_below="@id/Password"
                    android:id="@+id/ConfirmPassword"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:background="@color/colorWhite"
                    />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Address"
                    android:drawablePadding="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:drawableLeft="@mipmap/location_icon"
                    android:layout_below="@id/ConfirmPassword"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:id="@+id/Adress" />

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:drawablePadding="20dp"
                    android:paddingLeft="30dp"
                    android:drawableLeft="@mipmap/phone_icon"
                    android:paddingRight="30dp"
                    android:layout_below="@id/Adress"
                    android:background="@color/colorWhite"
                    android:id="@+id/PhoneNumber"
                    android:inputType="number"
                    android:layout_marginTop="10dp" />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/registration_attached"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/FullName"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/registration_attached"
                />
        </LinearLayout>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelativeLayout1"
            android:paddingBottom="15dp"
            android:layout_centerHorizontal="true"
            >


            <ImageView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/signup_btn"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                android:layout_marginTop="30dp"
                android:id="@+id/RegImgSign"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:textColor="@color/colorWhite"
                android:scaleType="fitEnd"
                android:text="Sign Up"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/RegSign"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBrown"
                android:fontFamily="sans-serif"
                android:layout_marginTop="5dp"
                android:layout_below="@id/ImgSign"
                android:scaleType="fitEnd"
                android:text="Already have an account"
                android:textSize="15dp"
                android:id="@+id/RegHaveAccount"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                />



        </RelativeLayout>


        </RelativeLayout>

    </ScrollView>






</LinearLayout>
